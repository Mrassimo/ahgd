# AHGD - Environment Configuration Template
# Copy this file to .env and modify the values as needed
# 
# SECURITY WARNING: Never commit .env files to version control!
# Add .env to your .gitignore file

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Application Metadata
APP_NAME=AHGD
APP_VERSION=0.1.0
APP_DESCRIPTION="Australian Health Geography Data repository with robust ETL pipeline"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary Database (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite:///./data_processed/ahgd.db
DB_ECHO=false  # Set to true for SQL query logging

# PostgreSQL Configuration (for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/ahgd
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ahgd
POSTGRES_USER=ahgd_user
POSTGRES_PASSWORD=your_secure_password

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# =============================================================================
# DATA SOURCES & API CONFIGURATION
# =============================================================================

# Australian Bureau of Statistics (ABS)
ABS_API_KEY=your_abs_api_key_here
ABS_BASE_URL=https://api.data.abs.gov.au

# Australian Institute of Health and Welfare (AIHW)
AIHW_API_KEY=your_aihw_api_key_here
AIHW_BASE_URL=https://www.aihw.gov.au/reports-data

# Bureau of Meteorology (BOM)
BOM_API_KEY=your_bom_api_key_here
BOM_BASE_URL=http://www.bom.gov.au/catalogue/data-feeds

# OpenStreetMap/Overpass API
OSM_API_BASE_URL=https://overpass-api.de/api/interpreter
OSM_RATE_LIMIT=1  # Requests per second

# =============================================================================
# CLOUD & EXTERNAL SERVICES
# =============================================================================

# AWS Configuration (for S3 storage, etc.)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=ap-southeast-2
AWS_S3_BUCKET=ahgd-data-bucket

# Hugging Face Hub (for ML models)
HUGGINGFACE_API_TOKEN=your_hf_token_here
HUGGINGFACE_CACHE_DIR=./cache/huggingface

# =============================================================================
# DATA PROCESSING SETTINGS
# =============================================================================

# Data Processing Paths
DATA_RAW_PATH=./data_raw
DATA_PROCESSED_PATH=./data_processed
LOGS_PATH=./logs
CACHE_PATH=./cache
TEMP_PATH=./temp

# Processing Configuration
MAX_WORKERS=4  # Number of parallel workers
CHUNK_SIZE=10000  # Rows per processing chunk
MEMORY_LIMIT_GB=8  # Maximum memory usage
ENABLE_CACHING=true

# Geographic Processing
CRS_DEFAULT=EPSG:4326  # Default coordinate reference system
CRS_AUSTRALIAN=EPSG:3577  # Australian Albers projection
SPATIAL_INDEX_TYPE=rtree  # rtree, quadtree

# =============================================================================
# WEB APPLICATION SETTINGS
# =============================================================================

# Web Server Configuration
HOST=localhost
PORT=8000
WORKERS=1
RELOAD=true  # Auto-reload on code changes (development only)

# CORS Settings (for API)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Security Keys
SECRET_KEY=your_super_secret_key_change_this_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Logging Configuration
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_BACKUP_COUNT=5
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30  # seconds

# Performance Monitoring
ENABLE_PROFILING=false  # Enable in development only
PROFILE_OUTPUT_DIR=./logs/profiles

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Tools
ENABLE_DEBUG_TOOLBAR=true
ENABLE_HOT_RELOAD=true
ENABLE_SQL_ECHO=false

# Testing Configuration
TEST_DATABASE_URL=sqlite:///./tests/test_ahgd.db
PYTEST_WORKERS=auto
COVERAGE_MIN_PERCENTAGE=80

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_ML_PREDICTIONS=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_REAL_TIME_PROCESSING=false

# Data Sources
ENABLE_ABS_DATA=true
ENABLE_AIHW_DATA=true
ENABLE_BOM_DATA=true
ENABLE_OSM_DATA=true

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis Configuration (if using Redis for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
CACHE_TTL=3600  # Cache time-to-live in seconds

# File-based Cache (fallback)
CACHE_DIR=./cache
CACHE_MAX_SIZE_GB=2

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Email Configuration (for alerts/reports)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@ahgd-project.org

# Slack Configuration (for alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#ahgd-alerts