# Australian Health Analytics Dashboard - Environment Configuration Template
# Copy this file to .env and modify values as needed

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
# Options: development, staging, production
AHGD_ENVIRONMENT=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database name (will be created in project root if path not specified)
AHGD_DB_NAME=health_analytics.db

# Full path to database file (optional - defaults to project_root/DB_NAME)
# AHGD_DB_PATH=/path/to/your/database.db

# =============================================================================
# DASHBOARD CONFIGURATION
# =============================================================================
# Dashboard server settings
AHGD_DASHBOARD_HOST=localhost
AHGD_DASHBOARD_PORT=8501
AHGD_DASHBOARD_DEBUG=false

# =============================================================================
# DATA SOURCE CONFIGURATION
# =============================================================================
# Override default data directories (optional)
# AHGD_RAW_DATA_DIR=/path/to/raw/data
# AHGD_PROCESSED_DATA_DIR=/path/to/processed/data

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================
# Number of worker processes for data processing
AHGD_MAX_WORKERS=4

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
AHGD_LOG_LEVEL=INFO

# Custom log directory (optional - defaults to project_root/logs)
# AHGD_LOG_DIR=/path/to/logs

# =============================================================================
# DEPLOYMENT SPECIFIC SETTINGS
# =============================================================================
# For production deployments, you might want to set:
# AHGD_ENVIRONMENT=production
# AHGD_DASHBOARD_HOST=0.0.0.0
# AHGD_DASHBOARD_PORT=80
# AHGD_DASHBOARD_DEBUG=false
# AHGD_LOG_LEVEL=WARNING

# For development with custom paths:
# AHGD_ENVIRONMENT=development
# AHGD_DASHBOARD_DEBUG=true
# AHGD_LOG_LEVEL=DEBUG